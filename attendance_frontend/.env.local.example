# Frontend environment configuration
# Copy this file to .env.local and adjust as needed.

# Backend base URL (Flask backend default)
REACT_APP_API_BASE=http://localhost:3001

# Optional alternates (used by api/client.js resolution order)
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Runtime flags
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/api/health
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false

# Disable fast refresh to avoid source-map consumer issues on some Node 18 stacks
REACT_APP_DISABLE_FAST_REFRESH=true

# CRA dev server port
PORT=3002
